<h1>Products Catalog</h1>

<p><%= flash[:notice] %></p>

<table class="table table-striped">
  <thead>
    <tr>
      <td>Name</td>
      <td>Brand</td>
      <td>Price</td>
      <td>Average Ranking</td>
      </tr>
  </thead>
    <% @products.each do |item| %>
    <tr>  
    <td><%= item.name %></td>
    <td><%= item.brand %></td>
    <td><%= number_to_currency(item.price) %></td>
    <td></td>
    </tr>
    <% end %>

</table>